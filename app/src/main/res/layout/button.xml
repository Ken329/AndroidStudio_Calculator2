<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:rowCount="5"
        android:columnCount="6">
        <LinearLayout
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnBracket"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="()"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnPercent"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="รท"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/button"
            android:layout_margin="5px"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>